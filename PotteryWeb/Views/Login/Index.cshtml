@model PotteryWeb.Models.tbUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-5 bg-light text-center mt-5">
    <h2>Login</h2>

    <form action="~/Login/" method="post" class="border px-5 py-3">
        <span>@ViewBag.Besked</span>
        <div>
            <label for="UserName">Bruger Navn</label> <br />
            <input type="text" name="UserName" value="" id="Username" class="form-control" />

        </div>
        <div>
            <label for="Password">Password</label> <br />
            <input type="Password" name="Password" value="" id="Password" class="form-control" />

        </div>

        <input type="submit" name="name" value="Login" class="my-4" />
        <div>
            <a class="btn bg-info text-white my-3" href="/Admin/Index">Fortryd og gå til forsiden</a>
        </div>
    </form>
</div>

