@model List<PotteryWeb.Models.tbCategory>
@{
    ViewBag.Title = "CategoryRev";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    if (TempData["besked"] != null)
    {
        ViewBag.Besked = TempData["besked"];
    }
}


<div class="container p-5 bg-light">
    <h2 class="text-center">Admin</h2>
    <a class="btn bg-info text-white float-right my-5" href="/Admin/COpret">Opret ny</a>


    <h3 class="lead alert-danger my-3 ">@ViewBag.Besked</h3>

    <table class="table border">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Kategori navn</th>

                <th scope="col">Slet</th>
                <th scope="col">Ret</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@item.IdCategory</th>
                    <td>@item.Category</td>
             

                    <td>
                        <a href="/Admin/CSlet/@item.IdCategory">
                            <img src="~/Content/gfx/if_delete_678153.png" />
                        </a>
                    </td>
                    <td>
                        <a href="/Admin/CRet/@item.IdCategory">
                            <img src="~/Content/gfx/if_pen-checkbox_353430.png" />
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>



