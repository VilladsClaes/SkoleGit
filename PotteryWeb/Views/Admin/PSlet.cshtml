@model PotteryWeb.Models.tbProduct
@{
    ViewBag.Title = "PSlet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container p-5 bg-light">
    <h2 class="text-center">Admin</h2>
    <a class="btn bg-info text-white float-right my-5" href="/Admin/POpret">Opret ny</a>


    <h3 class="lead alert-danger my-3 ">@ViewBag.Besked</h3>

    <table class="table border">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Navn</th>
                <th scope="col">Pris</th>
                <th scope="col">Kategori</th>
                <th scope="col">Img</th>



            </tr>
        </thead>
        <tbody>


            <tr>
                <th scope="row">@Model.IdProduct</th>
                <td>@Model.ProductName</td>
                <td>@Model.AboutProduct</td>
                <td>@Model.tbCategory.Category</td>
                <td>@Model.ProductImg</td>


            </tr>

        </tbody>
    </table>
    <form action="/Admin/PSlet" method="post" class="my-5 py-3">
        <input type="hidden" name="id" id="id" value="@Model.IdProduct" />
        <div class="float-right">

            <input type="submit" name="name" id="slet" value="SLET - kan ikke fortrydes" class="btn bg-danger text-white px-5 text-right" />
        </div>
        <div>
            <a class="btn bg-info text-white float-left" href="/Admin/ProductRev">Fortryd og gå til forsiden</a>
        </div>
    </form>
</div>


