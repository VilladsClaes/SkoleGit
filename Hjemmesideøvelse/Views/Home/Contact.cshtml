
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

    <!-- Jumbotron Header -->
    <div class="jumbotron parallax">
        <h1 class="display-3">Welcome to Blink</h1>
        <p class="lead">Add welcome message to your visitors and description, some description and some more description......</p>
        <hr class="my-4">
        <p>You can change the background color of this section in style.css file.</p>
        <button type="button" class="btn btn-danger btn-lg btn-md">
            Read more...
        </button>
    </div>
    <!-- Contact Section -->
    <section id="contactsec">
        <div class="container">
            <h1>Get in Touch with Us </h1>
            <div class="row">
                <div class="col-md-8">
                    <form>
                        <div class="form-group ">
                            <label for="name" class="col-sm-2 col-form-label">Name</label>
                            <div class="input-group input-group-lg mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon"></div>
                                <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Full name" required>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="email" class="col-sm-2 col-form-label">Email</label>
                            <div class="input-group input-group-lg mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon"></div>
                                <input type="email" class="form-control" id="inlineFormInputGroup" placeholder="Email id">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="password" class="col-sm-2 col-form-label">Password</label>
                            <div class="input-group input-group-lg mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon"></div>
                                <input type="password" class="form-control" id="inlineFormInputGroup" placeholder="Enter your password here">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="message" class="col-sm-2 col-form-label">Message</label>
                            <div class="input-group input-group-lg mb-2 mr-sm-2 mb-sm-0">
                                <div class="input-group-addon"></div>
                                <textarea class="form-control" id="exampleTextarea" rows="3" placeholder="Enter your message here" required></textarea>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-danger btn-md btn-lg">Sign in</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="offset-md-1 col-md-3 contactsocial">
                    <a href="#"><i class="fa fa-facebook-square fa-4x"></i></a>
                    <a href="#"><i class="fa fa-twitter-square fa-4x"></i></a>
                    <a href="#"><i class="fa fa-google-plus-square fa-4x"></i></a>
                    <a href="#"><i class="fa fa-pinterest-square fa-4x"></i></a>
                    <a href="#"><i class="fa fa-youtube-square fa-4x"></i></a>
                </div>
            </div>
        </div>
    </section>
   
