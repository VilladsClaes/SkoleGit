@model Hjemmesideøvelse.Models.TegnefilmsfigurTabel
@{
    ViewBag.Title = "OpretNyCartoon";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}


<div class="container bg-light p-5">
    <h2 >Opret Ny Cartoon</h2>
    <form action="/Admin/OpretNyCartoon" method="post" enctype="multipart/form-data">
        <div class="text-danger">@Html.ValidationSummary()</div>
        <div class="form-row">

            <div class="form-group col-md-6">
                <label for="CartoonName">Overskrift</label>
                <input type="text" name="CartoonName" id="CartoonName" value="@Model.CartoonName" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.CartoonName)</span>
            </div>

            <div class="form-group col-md-6">
                <label for="CreatedYear">Created Year</label>
                <input type="datetime" name="CreatedYear" id="CreatedYear" value="@Model.CreatedYear" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <label for="CartoonsSubscribe">Cartoons Subscribe</label>
            <textarea class="form-control" id="CartoonsSubscribe" name="CartoonsSubscribe" rows="3"></textarea>
            <span class="text-danger">@Html.ValidationMessageFor(m => m.CartoonsSubscribe)</span>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Photo">Vælg en Photo</label>
                <input type="file" name="Photo" id="Photo"  class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Photo)</span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Opret ny</button>
    </form>
</div>
