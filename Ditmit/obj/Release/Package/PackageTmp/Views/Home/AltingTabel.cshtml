@model Ditmit.Models.HelpViewModel

@{
    Layout = null;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Opslag</th>
            <th scope="col">Dato</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.helpOffers)
        {


            <tr class="badge-info">
                <th scope="row">@item.HelpOfferID</th>
                <td>@item.HelpOfferText</td>
                <td>@item.HelpOfferDate</td>

            </tr>

        }
        @* Loop listen med ønsker *@
        @foreach (var item in Model.helpWants)
        {


            <tr class="badge-danger">
                <th scope="row">@item.HelpWantID</th>
                <td>@item.HelpWantText</td>
                <td>@item.HelpWantDate</td>
            </tr>

        }

    </tbody>
</table>
