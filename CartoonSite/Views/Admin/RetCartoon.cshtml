@model CartoonSite.Models.CartoonTable
@{
    ViewBag.Title = "RetCartoon";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}
<div class="container bg-light">
    <h2>Ret Cartoon</h2>
    <form action="/Admin/RetCartoon" method="post" enctype="multipart/form-data">
        <div class="text-danger">@Html.ValidationSummary()</div>
        <div class="form-row">
            @*CartoonID*@
            <div class="form-group col-md-6">
                <label for="CartoonID">ID:</label>
                <input type="text" name="CartoonID" id="CartoonID" readonly value="@Model.CartoonID" />
            </div>
        </div>
            @*Cartoon navn*@
            <div class="form-group col-md-6">
                <label for="CartoonName">Cartoon navn:</label>
                <input type="text" name="CartoonName" id="CartoonName" value="@Model.CartoonName" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.CartoonName)</span>
            </div>

            @*Cartoon Beskrivelse*@
            <div class="form-row">
                <label for="CartoonsSubscribe">Cartoons Subscribe</label>
                <textarea class="form-control" id="CartoonsSubscribe" name="CartoonsSubscribe" va rows="3">@Model.CartoonsSubscribe</textarea>
                <span class="text-danger">@Html.ValidationMessageFor(m => m.CartoonsSubscribe)</span>
            </div>
        
            @*billede filtet*@
        <div class="form-row">
            <div class="form-group col-md-6">

                @*nuværende billede*@
                <img src="~/Content/Img/@Model.Photo" width="100" />


                @*hvis brugeren vil beholde det eksistende billede*@
                <input type="hidden" name="Photo" id="Photo" value="@Model.Photo" />

                @*hvis brugeren vil have et andet billede*@
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="NytPhoto">Vælg en Photo</label>
                        <input type="file" name="NytPhoto" id="Photo" class="form-control" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Photo)</span>
                    </div>
                </div>
            </div>
        </div>
                    @*submit button*@
                    <div class="form-row ">
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary">Ret Cartoonen</button>
                            <a href="/Admin/" class="btn btn-success">fortryd uden Retelse</a>
                        </div>
                    </div>
                
            
        
    </form>
</div>