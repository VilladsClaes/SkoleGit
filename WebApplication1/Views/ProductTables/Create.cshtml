@model WebApplication1.Models.ProductTable

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ProductTable</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @* NAVN *@
    <div class="form-group">
        @Html.LabelFor(model => model.ProductName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
        </div>
    </div>
    @* FILUPLOADER *@
    <div class="form-group">
        <label class="control-label col-md-4" for="PictureTable">Vælg et billede til produktet:</label>

        <div class="col-md-10">


            <input class="form-control"
                   type="file"
                   id="PictureTable" name="PictureFileNames"
                   accept="image/png, image/jpeg">

            @*@Html.EditorFor(model => model.PictureTables, new { @class = "form-control", type = "file" })
            @Html.ValidationMessageFor(model => model.PictureTables)*@


            @*@Html.EditorFor(model => model.PictureTables, new { @class = "form-control", type = "file", multiple = "multiple" })
            @Html.ValidationMessageFor(model => model.PictureTables, "", new { @class = "text-danger" })*@
        </div>
    </div>

    @* PRIS *@
    <div class="form-group">
        @Html.LabelFor(model => model.ProductPrice, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ProductPrice, new { type = "number", min = "0", max = "9000", htmlAttributes = new { @class = "form-control col-md-4" } })
            @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    @* BRAND *@
    <div class="form-group">
        @Html.LabelFor(model => model.ProductBrandID, "ProductBrandID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ProductBrandID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProductBrandID, "", new { @class = "text-danger" })
        </div>
    </div>

    @* BESKRIVELSE *@
    <div class="form-group">
        @Html.LabelFor(model => model.ProductBeskrivelse, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ProductBeskrivelse, new
       {
           @class = "form-control",
           @value = "Skriv noget om skoen her",
           //@disabled="true",
           cols = "20",
           rows = "10",
           @title = "Beskriv skoen",
           @tabindex = "0",
           //@accesskey="z",
           @align = "left",
           @autofocus = "true",
           //@style = "background-color:yellow; font-weight:bold",
           @draggable = "true",
           //@hidden="true",
           //@maxlength="12",
           @minlength = "5",
           @required = "true"
       })
            @Html.ValidationMessageFor(model => model.ProductBeskrivelse, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
